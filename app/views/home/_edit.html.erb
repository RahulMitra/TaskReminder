<div class="modal hide" id="EditModal<%=activity.id%>">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Edit <%= activity.name %></h3>
  </div>
  <div class="modal-body">
		<form class = "form-horizontal" name="input<%=activity.id%>" action="/home/post_edit.html" method="post">	
				<div class="control-group">
					<label class="control-label" for="taskName">Task Name:</label>
					<div class="controls">
						<input type="text" class="input-large" name="taskName" value = "<%= activity.name %>">
		            </div>
				</div>
				<div class="control-group">
		            <label class="control-label" for="timeOut">Days till timeout: </label>
		            <div class="controls">
		              	<select name="timeOut" class="span1">
							<% (1..7).each do |i| %>
								<% if i == activity.time_out %>
									<option selected = "selected"><%= i %></option>
								<% else %>
									<option><%= i %></option>
								<% end %>
							<% end %>
		              	</select>
		            </div>
		          </div>
				  <div class="control-group">
		            <label class="control-label" for="lastCompleted">Last Completed: </label>
		            <div class="controls">						
						<div class="input-append date datepick" data-date="<%=activity.time.strftime("%m/%d/%Y")%>">
						  <input class="span2" size="16" type="text" name="lastCompleted" value="<%=activity.time.strftime("%m/%d/%Y")%>">
						  <span class="add-on"><i class="icon-th"></i></span>
						</div>
		            </div>
		          </div>
				 <div class="control-group">
		           <label class="control-label" for= "optionsCheckbox">Reminders: </label>
		          <div class="controls">
					<label class="checkbox">
						<% if activity.text_message %>
							<input type="checkbox" name="textOption" value="text" checked = "checked"> Send me reminders by <b>text message</b>
						<% else %>
							<input type="checkbox" name="textOption" value="text"> Send me reminders by <b>text message</b>
						<% end %>
					</label>
					<label class="checkbox">
						<% if activity.email %>
							<input type="checkbox" name="emailOption" value="email" checked = "checked"> Send me reminders by <b>email</b>
						<% else %>
							<input type="checkbox" name="emailOption" value="email"> Send me reminders by <b>email</b>
						<% end %>
					</label>
		          </div>
					<div class="alert alert-error" id="alert" style="display:none;">
						<strong>Error Message</strong>
					</div>
				</div>
				<input type="hidden" name="id" value="<%=activity.id%>">
  			</div>
  			<div class="modal-footer">
				<button type="submit" value = "Submit" class="btn btn-primary btn-large pull-left">Save Changes</button>
				<button class="btn btn-danger btn-large pull-right" onclick="var r = confirm('Are you sure?'); if(r==true){input<%=activity.id%>.action='/home/post_delete.html'}">Delete Task</button>
			</div>
		</form>
  </div>
</div>